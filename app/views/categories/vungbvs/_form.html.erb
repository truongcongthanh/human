<%= form_for ([:categories, @vungbv]), :data => {remote: true}, :html => {:class => "form-horizontal", role: "form"} do |f| %>
    <div class="row text-center" style="padding: 15px;">
      <div class="col-sm-12">
        <div class="form-group">
          <label for="vungbv_ten_vn" class="col-sm-2 control-label">Tên vùng VN</label>

          <div class="col-sm-10">
            <%= f.text_field :ten_vi, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label for="vungbv_ten_en" class="col-sm-2 control-label">Tên vùng EN</label>

          <div class="col-sm-10">
            <%= f.text_field :ten_en, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label for="vungbv_ten_ot" class="col-sm-2 control-label">Tên vùng JP</label>

          <div class="col-sm-10">
            <%= f.text_field :ten_ot, :class => "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to categories_vungbvs_path, class: "btn btn-default", data: {dismiss: "modal"} do %>
          <%= t "back" %>
      <% end %>
      <button type="submit" class="btn btn-primary">
        <%= t "save" %>
      </button>
    </div>
<% end %>